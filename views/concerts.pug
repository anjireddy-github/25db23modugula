extends layout

block content
  h1= title
  
  style.
    .concert-item {
      border: 2px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      margin: 10px 0;
      background-color: #f9f9f9;
    }
    .concert-info {
      flex-grow: 1;
    }
    .concert-actions {
      display: flex;
      gap: 10px;
      align-items: center;
    }
    .btn {
      padding: 5px 15px;
      border-radius: 4px;
      border: none;
      cursor: pointer;
      font-size: 14px;
    }
    .btn-inspect {
      background-color: #17a2b8;
      color: white;
    }
    .btn-update {
      background-color: #ffc107;
      color: black;
    }
    .btn-delete {
      background-color: #dc3545;
      color: white;
    }
    .btn-add {
      background-color: #28a745;
      color: white;
      margin-bottom: 20px;
      padding: 10px 20px;
      font-size: 16px;
    }
    .btn:hover {
      opacity: 0.8;
    }
  
  div.container-fluid
    div.row
      div.col-12
        button.btn.btn-add(onclick="addConcert()") Add New Concert
    
    div.row
      div.col-12
        each concert in results
          div.concert-item.d-flex.justify-content-between
            div.concert-info
              p 
                strong Concert: 
                | #{concert.concert_name}
              p 
                strong Venue: 
                | #{concert.venue}
              p 
                strong Ticket Price: 
                | $#{concert.ticket_price}
            div.concert-actions
              button.btn.btn-inspect(onclick=`inspect('${concert._id}')`) Inspect
              button.btn.btn-update(onclick=`update('${concert._id}')`) Update
              button.btn.btn-delete(onclick=`deleteConcert('${concert._id}')`) Delete
  
  script.
    function addConcert() {
      window.location.href = '/concerts/create';
    }
    function inspect(id) {
      window.location.href = `/concerts/detail/${id}`;
    }
    function update(id) {
      window.location.href = `/concerts/update/${id}`;
    }
    function deleteConcert(id) {
      if(confirm('Are you sure you want to delete this concert?')) {
        window.location.href = `/concerts/delete/${id}`;
      }
    }
