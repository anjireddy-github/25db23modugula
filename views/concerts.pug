extends layout

block content
  h1= title
  
  style.
    .col-sm-2 {
      cursor: pointer;
      border: 2px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      margin: 10px;
      transition: background-color 0.3s;
    }
    .col-sm-2:hover {
      background-color: #f0f0f0;
    }
  
  -
    let results = [
      { venue: "Madison Square Garden", artist: "Taylor Swift", ticket_price: 250 },
      { venue: "Red Rocks Amphitheatre", artist: "Coldplay", ticket_price: 180 },
      { venue: "Hollywood Bowl", artist: "The Weeknd", ticket_price: 220 },
      { venue: "Wembley Stadium", artist: "Ed Sheeran", ticket_price: 195 },
      { venue: "Coachella Valley", artist: "Billie Eilish", ticket_price: 450 }
    ]
  
  div.container-fluid
    div.row
      each concert, index in results
        div.col-sm-2(onclick=`buy(${index})`)
          p Venue: #{concert.venue}
          p Artist: #{concert.artist}
          p Ticket Price: $#{concert.ticket_price}
  
  script.
    function buy(index) {
      alert(`You purchased item ${index}`);
    }
