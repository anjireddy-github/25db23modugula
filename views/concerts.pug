extends layout

block content
  h1= title
  
  style.
    .col-sm-2 {
      cursor: pointer;
      border: 2px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      margin: 10px;
      transition: background-color 0.3s;
    }
    .col-sm-2:hover {
      background-color: #f0f0f0;
    }
  
  div.container-fluid
    div.row
      each concert, index in results
        div.col-sm-2(onclick=`buy(${index})`)
          p Concert: #{concert.concert_name}
          p Venue: #{concert.venue}
          p Ticket Price: $#{concert.ticket_price}
  
  script.
    function buy(index) {
      alert(`You purchased item ${index}`);
    }
